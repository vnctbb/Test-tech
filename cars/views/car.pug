doctype html
head
  meta(charset=utf-8)
  meta(name='viewport' content='width=device-width, initial-scale=1')
  link(rel='stylesheet' href='/styles/style.css')
  link(rel="shortcut icon" type="image/png" href="/img/icon.png")
  script(src="/scripts/button.js")
  title - Caars - #{car.name} - Le catalogue des plus belles voitures
body
  header
    h1 - Caars -
    hr
    h2= car.name
    div.button
      a(href='/') Menu
      button Liste
  section.description
    p.w600= car.description
    img.carPics(src=`${car.img}` alt=`${car.name}`)
    h2.yellow Fiche technique
    p <span>Marque :</span> #{car.marque}
    p <span>Produite depuis</span> #{car['annees-de-production']} <span>à</span> #{car['usine-s-dassemblage']}
    p <span>Type :</span> #{car.classe}
    p <span>Moteur(s) :</span> #{car['moteur-s']}
    p <span>Boite de vitesse :</span> #{car['boite-de-vitesses']}
    div
      p <span>Cylindrée :</span> #{car.cylindree}
      p <span>Puissance max :</span> #{car['puissance-maximale']}
      p <span>Couple max :</span> #{car['couple-maximal']}
    p <span>Poids à vide :</span> #{car['poids-a-vide']}
    p <span>Accélération :</span> #{car.acceleration}
    p <span>Vitesse max :</span> #{car['vitesse-maximale']}
    div
      p <span>Consommation :</span> #{car['consommation-mixte']}
      p <span>Emission Co2 :</span> #{car['emission-de-co2']}
    hr
  section.hiddenMenu
    button Retour
    ul
      each car in cars
        li
          a(href=`/cars/${car.name}`) #{car.name}
  include includes/footer.pug